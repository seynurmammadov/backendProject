@model LoginVM
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" style="color:red; margin-bottom:5px"></div>
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="LogName"></span>
                                </p>
                                <input asp-for="LogName" placeholder="Email Or Username">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="Password"></span>
                                </p>
                                <input asp-for="Password" placeholder="Password">
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe" id="remember" checked>
                                        <label asp-for="RememberMe">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
