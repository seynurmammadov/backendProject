@{ 
    ViewData["Title"] = "Eduhome - Reset Password";

}
<!-- Banner Area Start -->
@await Component.InvokeAsync("SiteTitle", "Reset Password")
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                            <span>Please enter new password.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" style="color:red; margin-bottom:5px"></div>
                                <div class="text-success">@TempData["error"]</div>
                                <input name="NewPassword" id="NewPassword" placeholder="New Password" type="password">
                                <div class="button-box">
                                    <button type="submit" class="default-btn">Reset</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->