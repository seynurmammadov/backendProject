@model SiteInfo
<footer class="footer-area">
    <div class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-widget pr-60">
                        <div class="footer-logo pb-25">
                            <a asp-controller="home" asp-action="index"><img src="~/site/img/logo/@Model.Logo" alt="eduhome"></a>
                        </div>
                        <p> @Model.ShortDescription </p>
                        <div class="footer-social">
                            <ul>
                                @if (Model.Facebook != null)
                                {
                                    <li><a target="_blank" href="@Model.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                }
                                @if (Model.Pinterest != null)
                                {
                                    <li><a target="_blank" href="@Model.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                }
                                @if (Model.Twitter != null)
                                {
                                    <li><a target="_blank" href="@Model.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="single-widget">
                        <h3>information</h3>
                        <ul>
                            <li><a href="#">addmission</a></li>
                            <li><a href="#">Academic Calender</a></li>
                            <li><a asp-controller="event" asp-action="index">Event List</a></li>
                            <li><a href="#">Hostel &amp; Dinning</a></li>
                            <li><a href="#">TimeTable</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12">
                    <div class="single-widget">
                        <h3>useful links</h3>
                        <ul>
                            <li><a asp-controller="course" asp-action="index">our courses</a></li>
                            <li><a asp-controller="about" asp-action="index">about us</a></li>
                            <li><a asp-controller="teacher" asp-action="index">teachers &amp; faculty</a></li>
                            <li><a href="#">teams &amp; conditions</a></li>
                            <li><a asp-controller="event" asp-action="index">our events</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="single-widget">
                        <h3>get in touch</h3>
                        <p>@Model.Address</p>
                        <p>@Model.PhoneNumber1<br>@Model.PhoneNumber2</p>
                        <p>@Model.Email<br>@Model.SiteUrl</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <p>Copyright © <a href="#" target="_blank">MammedovCompany</a> 2020. All Right Reserved By Seynur =).</p>
                </div>
            </div>
        </div>
    </div>
</footer>