@model RegisterVM
@{
    ViewData["Title"] = "Eduhome - Register";

}

<!-- Banner Area Start -->
@await Component.InvokeAsync("SiteTitle", "register")
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>register</h2>
                            <span>Please login using account detail bellow.</span>

                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly" style="color:red; margin-bottom:5px"></div>
                            <form method="post">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="Name"></span>
                                </p>

                                <input asp-for="Name" placeholder="Name">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="Surname"></span>
                                </p>

                                <input asp-for="Surname" placeholder="Surname">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="Username"></span>
                                </p>

                                <input asp-for="Username" placeholder="Username">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="Email"></span>
                                </p>

                                <input asp-for="Email" placeholder="Email">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="PhoneNumber"></span>
                                </p>

                                <input asp-for="PhoneNumber" placeholder="Phone Number">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="Password"></span>
                                </p>

                                <input asp-for="Password" placeholder="Password">
                                <p>
                                    <span style="color:red;font-size:10px" asp-validation-for="CheckPassword"></span>
                                </p>
                                <input asp-for="CheckPassword" placeholder="Check Password">
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe" id="remember" checked>
                                        <label asp-for="RememberMe">Remember me</label>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
<!-- Register end -->
