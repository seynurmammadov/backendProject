@model Notice
@{
    ViewData["Title"] = "Admin Panel - Create Notice";
    ViewData["TitleNavbar"] = " Create Notice ";
}


<!-- Status text + button -->
<div class="card">
    <div class="card-header header-elements-inline">
        <h6 class="card-title">Create Notice</h6>
    </div>

    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="NoticeTime"></label>
                <input asp-for="NoticeTime" class="form-control mb-3" placeholder="Enter Name">
                <span class="text-warning" asp-validation-for="NoticeTime"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoticeText"></label>
                <input asp-for="NoticeText" class="form-control mb-3" placeholder="Enter Name">
                <span class="text-warning" asp-validation-for="NoticeText"></span>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <button type="submit" class="btn bg-blue ml-3 legitRipple">Submit <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>
@section ThemeScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
