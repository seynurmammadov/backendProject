@model SendMessageFromUser
@{
    ViewData["Title"] = "Admin Panel - About Message ";
    ViewData["TitleNavbar"] = "  About Message ";
}

<!-- Status text + button -->
<div class="card">
    <div class="card-header header-elements-inline">
        <h6 class="card-title"> About Message</h6>
    </div>

    <div class="card-body">
        <form method="post">
            <div class="form-group col-3">
                <label asp-for="Fullname"></label>
                <input asp-for="Fullname" class="form-control mb-3" placeholder="Enter Name">
                <span class="text-warning" asp-validation-for="Fullname"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control mb-3" placeholder="Enter Name">
                <span class="text-warning" asp-validation-for="Email"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Subject"></label>
                <input asp-for="Subject" class="form-control mb-3" placeholder="Enter Name">
                <span class="text-warning" asp-validation-for="Subject"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Message"></label>
                <input asp-for="Message" class="form-control mb-3" placeholder="Enter Name">
                <span class="text-warning" asp-validation-for="Message"></span>
            </div>

            <div class="d-flex justify-content-end align-items-center">
                <a asp-controller="usermessage" asp-action="SendEmail" asp-route-id="@Model.Id" class="btn btn-primary">Send Email</a>
                <a asp-controller="usermessage" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section ThemeScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
<!-- /status text + button -->
